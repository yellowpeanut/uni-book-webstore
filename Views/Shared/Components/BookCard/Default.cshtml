@using Application.Data.Enums

@model Application.Models.BookData

@{
    Layout = null;
}

@if (Model != null)
{
    <div class="d-inline-flex w-100 border-bottom border-1 mb-4">
        <div class="">
            <img src="@Model.Book.ImageURL" width="160" height="240" alt="">
        </div>
        <div class="p-5 d-flex flex-column pt-0">
            <div>
                @if (Model.Book.Rating != null)
                {
                    <p class="text-primary">@Model.Book.Title | @Model.Book.Rating / 10</p>
                }
                else
                {
                    <p class="text-primary">@Model.Book.Title</p>
                }
            </div>
            <div>
                <p>@Model.Book.Author</p>
            </div>
            <div class="d-flex flex-row">
                @foreach (var c in Model.CategoryValues)
                {
                    <div class="m-1 ml-0"><button class="btn btn-secondary btn-sm" style="background: #ddd">@c</button></div>
                }
            </div>
            <div class="mt-3">
                <div class="d-inline">@Model.Book.Price руб</div>
                @if (ViewBag.Mode == BookCardModes.Remove)
                {
                    <div class="d-inline" style="margin-left: 25px; margin-bottom: 0">Количество</div>
                    <input type="number" style="width: 60px; margin-bottom: 0" value="1" />
                }
            </div>
            <div class="mt-3">
                @if(ViewBag.Mode == BookCardModes.Add)
                {
                    <button class="btn btn-success small" asp-action="AddToCart">
                        В корзину
                    </button>
                }
                else if(ViewBag.Mode == BookCardModes.Remove)
                {
                    <button class="btn btn-danger small">
                        Убрать
                    </button>
                }
                else if (ViewBag.Mode == BookCardModes.Rate)
                {
                    
                }
                else if (ViewBag.Mode == BookCardModes.None){}


            </div>
        </div>
    </div>
}