@model BookWebApp.Models.User

<form class="" method="post" asp-controller="User" asp-action="Login">
    <fieldset class="">
        <legend class="text-black">Вход</legend>
        <div class="">
            <label for="" class="form-label mt-4">Адрес электронной почты</label>
            <input type="text" class="form-control w-50" placeholder="" asp-for="Email">
        </div>
        <div class="">
            <label for="" class="form-label mt-4">Пароль</label>
            <input type="password" class="form-control w-50" placeholder="" asp-for="Password">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Войти</button>
    </fieldset>
</form>